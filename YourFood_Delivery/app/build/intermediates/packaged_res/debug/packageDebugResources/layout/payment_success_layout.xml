<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment_success_gradient">

    <!-- Optional circular background behind the icon -->
    <View
        android:id="@+id/circleView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:background="@drawable/payment_success_circle" />

    <!-- Checkmark icon to symbolize successful payment -->
    <ImageView
        android:id="@+id/ivCheckmark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_check_24" />

</FrameLayout>
