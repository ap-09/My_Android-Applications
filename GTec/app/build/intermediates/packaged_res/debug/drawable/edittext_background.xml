<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/greyLight" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/greyDark" />

    <!-- Corner radius -->
    <corners android:radius="8dp" />

    <!-- Padding (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
